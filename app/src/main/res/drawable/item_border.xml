<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border color and width -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- The desired corner radius. reduce it to have sharper corners -->
    <corners android:radius="4dp" />

    <!-- Add a little padding inside the border -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
